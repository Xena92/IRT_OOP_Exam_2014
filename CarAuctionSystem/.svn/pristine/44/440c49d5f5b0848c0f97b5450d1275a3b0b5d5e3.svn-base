namespace CarAuctionSystem
{
    /// <summary>
    ///     Interface for big vehicles where heigt, weight and length
    /// </summary>
    public interface IBigVehicle
    {
        /// <summary>
        ///     Gets the height.
        /// </summary>
        /// <value>
        ///     The height.
        /// </value>
        double Height { get; }

        /// <summary>
        ///     Gets the weight.
        /// </summary>
        /// <value>
        ///     The weight.
        /// </value>
        double Weight { get; }

        /// <summary>
        ///     Gets the length.
        /// </summary>
        /// <value>
        ///     The length.
        /// </value>
        double Length { get; }
    }
}